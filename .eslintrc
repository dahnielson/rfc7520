{
  "extends": [
    "standard",
    "standard-jsx"
  ],

  "env": {
    "browser": true,
    "serviceworker": true,
    "jest": true
  },

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },

  "plugins": [
    "react"
  ],

  "settings": {
    "react": {
      "pragma": "h"
    }
  },

  "rules": {
    "react/jsx-no-bind": ["error", {
      "allowArrowFunctions": true,
      "allowBind": false,
      "ignoreRefs": true
    }],
    "react/no-did-update-set-state": "error",
    "react/react-in-jsx-scope": "error"
  }
}
